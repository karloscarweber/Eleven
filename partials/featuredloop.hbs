{{! This is the post loop - each post will be output using this markup }}

<h2 class="featured-header">Featured Articles</h2>

{{#foreach posts limit="52"}}
  {{#if featured}}
    <article class="{{post_class}} index-post-summary-featured clearfix {{#if featured}}featured{{/if}}">
      
      <header class="post-header">
          <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
          <p class="post-date"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do YYYY"}}</time> BY {{author}} {{#if tags}}in {{tags prefix=" on "}} {{/if}}</p>
      </header>
      
      {{#if image}}
      <img  src="{{image}}" />
      {{/if}}
      
    </article>
    
  {{/if}}

{{/foreach}}

