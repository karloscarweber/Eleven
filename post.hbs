{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}
<div class="grid-block colored clearfix">

    {{#if image}} 
        <div class="image-div" style="background-image:url({{image}})"></div>
    {{/if}}

    {{> "masthead"}}
    
</div>

<main class="content grid-block clearfix" role="main">
    <div class="grid-row">
        <article class="{{post_class}} post grid-column actualpostcontentarea" style="margin-bottom:60px;">

            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <p class="post-date"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do YYYY"}}</time> BY {{author}} {{#if tags}}in {{tags prefix=" on "}} {{/if}}</p>
            </header>  

            <section class="post-content">
                {{content}}
            </section>

        </article>
    </div>
</main>

{{/post}}
