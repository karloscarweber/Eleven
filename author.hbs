{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="grid-block homepageMasthead clearfix">{{> "masthead"}}</div>

<main class="content grid-block clearfix" role="main">
    <div class="grid-row">
        {{#author}}
        <article class="{{post_class}} post grid-column actualpostcontentarea" style="margin-bottom:0px;">
            <header class="post-header">
                <h1 class="post-title">{{name}}</h1>
            </header>
        </article>
        {{/author}}
    </div>
</main>

<div class="grid-block grid-block-780 clearfix meta_description">
  {{#author}}
  <img class="author-image" src="{{image}}" alt="" /> 
  <p class="author-lede" style="margin-top:0px;margin-bottom:50px;">{{bio}}</p>
  {{/author}}
</div>

<div class="grid-block grid-block-580">
  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</div>
